<% layout("/layouts/boilerplate") -%>
<body>
    <br>
    <div class="row">
    <div class="col-8 offset-2">

    
    <h1>Create a New Listing</h1>
    
    <form method="post" action="/listings">

        <div class="mb-3">
        <label for="title"class="form-label">Title</label>
         <input type="text" name="title" placeholder="add a catchy title" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
           <textarea name="description" id="" class="form-control"></textarea>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input type="text" name="image" placeholder="enter image URL/Link"
          class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
           <input type="Number" name="price" placeholder="1200"
           class="form-control">
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="country" placeholder="India"
            class="form-control">
        </div>
        </div>
    <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" placeholder="Jaipur,Rajasthan"
            class="form-control">
        </div>
       
           <button class="btn btn-dark add-btn">add</button>
       
       
       <br> <br>
    </form>
     </div>
    </div>
</body>
<style>
    .add-btn{
        background-color: #fe424d;
        border: none;
    }
</style>
